rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function signedIn() {
      return request.auth != null;
    }

    function isOwner(uid) {
      return signedIn() && request.auth.uid == uid;
    }

    // Package 3 freeze: user item/folder data is Oracle-owned.
    // Keep read access for authenticated owner during rollback/verification window.
    // Deny all writes so Firebase is effectively Auth-only for these collections.
    match /users/{uid}/items/{itemId} {
      allow read: if isOwner(uid);
      allow write: if false;
    }

    match /users/{uid}/personalNoteFolders/{folderId} {
      allow read: if isOwner(uid);
      allow write: if false;
    }

    // Optional user document (profile shell) can remain owner-readable.
    // Writes intentionally disabled here as part of auth-only posture.
    match /users/{uid} {
      allow read: if isOwner(uid);
      allow write: if false;
    }

    // Default deny for all other Firestore data. Firebase Auth is unaffected by rules.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

